/* pages/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.header {
  margin-bottom: 20rpx;
}

.line-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.station-list {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.list-header {
  display: flex;
  justify-content: space-between;
  background-color: #f0f0f0;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  color: #666;
}

.station-name-header {
  flex: 1;
}

.schedule-header {
  flex: 2;
  text-align: right;
}

.station-item {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
}

.station-item:last-child {
  border-bottom: none;
}

.station-name {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.schedule-details {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 26rpx;
  color: #555;
  flex: 2;
}

.direction-block {
  text-align: right;
  margin-bottom: 10rpx;
}

.direction-block:last-child {
  margin-bottom: 0;
}

.direction-text {
  font-size: 24rpx;
  color: #888;
  display: block;
}

.time-text {
  font-weight: bold;
}

.loading-container {
  text-align: center;
  padding: 50rpx;
  color: #888;
}
